@model EntityLayer.Concrete.Category
@{
    Layout = null;
}

<link  href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>


<h1>kategori ekleme sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x=>x.CategoryName)
        <br />
        <br />
        @Html.Label("Açıklamayı Yazınız")
         @Html.TextBoxFor(x=>x.CategoryDescription)
         <br />
         <br />
         <button>Kaydet</button>
    </div>
}

<form class="form-group" method="post">
    <input type="text" placeholder="kategori ekleyin" name="CategoryName" class="form-control"/>
    <br />
    <input type="text" placeholder="açıklama ekleyin" name="CategoryDescription " class="form-control"/>
    <br />
    <button class="btn btn-primary">ekle</button>

</form>