@model EntityLayer.Concrete.Heading
@{
    ViewData["Title"] = "AddHeding";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Başlık Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık  adı")
        @Html.TextBoxFor(x => x.HeadingName, new {@class="form-control"})
        @Html.ValidationMessageFor(x => x.HeadingName , "", new { @style="color:red" })
         <br>
        @Html.Label("Kategori Adı")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)  ViewBag.vlc, new {@class="form-control"})
         <br>
        @Html.Label("Yazar Adı")
       @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)  ViewBag.vlw, new {@class="form-control"})
         <br>
         @Html.Label("Başlık  Resmi")
        @Html.TextBoxFor(x => x.HeadingImage, new {@class="form-control"})
        @Html.ValidationMessageFor(x => x.HeadingImage , "", new { @style="color:red" })
         <br>
         <button class="btn btn-info">Ekle</button>
    </div>
}
